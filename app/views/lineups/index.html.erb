<h1>Listing lineups</h1>

<table>
  <tr>
    <th>Game</th>
    <th>Player</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lineups.each do |lineup| %>
  <tr>
    <td><%= lineup.game %></td>
    <td><%= lineup.player %></td>
    <td><%= link_to 'Show', lineup %></td>
    <td><%= link_to 'Edit', edit_lineup_path(lineup) %></td>
    <td><%= link_to 'Destroy', lineup, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

